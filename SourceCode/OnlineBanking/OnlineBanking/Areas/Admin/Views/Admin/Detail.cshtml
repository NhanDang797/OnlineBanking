@model OnlineBanking.Models.Customer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>Admin Home</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <!-- bootstrap & fontawesome -->
    <link rel="stylesheet" href="~/Content/Admin/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Admin/assets/font-awesome/4.5.0/css/font-awesome.min.css" />

    <!-- page specific plugin styles -->
    <link rel="stylesheet" href="~/Content/Admin/assets/css/jquery-ui.custom.min.css" />
    <link rel="stylesheet" href="~/Content/Admin/assets/css/jquery.gritter.min.css" />

    <!-- text fonts -->
    <link rel="stylesheet" href="~/Content/Admin/assets/css/fonts.googleapis.com.css" />

    <!-- ace styles -->
    <link rel="stylesheet" href="~/Content/Admin/assets/css/ace.min.css" class="ace-main-stylesheet" id="main-ace-style" />

    <!--[if lte IE 9]>
        <link rel="stylesheet" href="assets/css/ace-part2.min.css" class="ace-main-stylesheet" />
    <![endif]-->
    <link rel="stylesheet" href="~/Content/Admin/assets/css/ace-skins.min.css" />
    <link rel="stylesheet" href="~/Content/Admin/assets/css/ace-rtl.min.css" />
    <link rel="stylesheet" href="~/Content/Admin/assets/css/custom.css" />

    <!--[if lte IE 9]>
      <link rel="stylesheet" href="assets/css/ace-ie.min.css" />
    <![endif]-->
    <!-- inline styles related to this page -->
    <style>
        /* some elements used in demo only */
        .spinner-preview {
            width: 100px;
            height: 100px;
            text-align: center;
            margin-top: 60px;
        }

        .dropdown-preview {
            margin: 0 5px;
            display: inline-block;
        }

            .dropdown-preview > .dropdown-menu {
                display: block;
                position: static;
                margin-bottom: 5px;
            }
        /*Search*/
        .div-search {
            border-radius: 10px !important;
        }

        .btn-search {
            background: #424242;
            border-radius: 0;
            color: #fff;
            border-width: 1px;
            border-style: solid;
        }

            .btn-search:link, .btn-search:visited {
                color: #fff;
            }

            .btn-search:active, .btn-search:hover {
                background: #1c1c1c;
                color: #fff;
            }
    </style>

    <!-- ace settings handler -->
    <script src="~/Content/Admin/assets/js/ace-extra.min.js"></script>


</head>

<body class="no-skin ">
    <div id="navbar" class="navbar navbar-default          ace-save-state">
        <div class="navbar-container ace-save-state" id="navbar-container">
            <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
                <span class="sr-only">Toggle sidebar</span>

                <span class="icon-bar"></span>

                <span class="icon-bar"></span>

                <span class="icon-bar"></span>
            </button>

            <div class="navbar-header pull-left">
                <a href="#" class="navbar-brand">
                    <small>
                        <i class="badge-grey fa fa-cogs"></i>
                        OnlineBanking Admin
                    </small>
                </a>
            </div>

            <div class="navbar-buttons navbar-header pull-right" role="navigation">
                <ul class="nav ace-nav">
                    <li class="grey dropdown-modal">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <i class="ace-icon fa fa-user"></i>
                            <span class="badge badge-secondary">A</span>
                        </a>

                    </li>

                </ul>
            </div>
        </div><!-- /.navbar-container -->
    </div>
    <div class="main-container ace-save-state" id="main-container">
        <script type="text/javascript">
            try { ace.settings.loadState('main-container') } catch (e) { }
        </script>

        <div class="main-content">

            <div class="main-content-inner">


                <div class="page-content">


                    <div class="row">

                        <div class="col-xs-12">
                            <!-- PAGE CONTENT BEGINS -->

                            <div class="row">

                                <div class="col-12">
                                    <div class="tabbable tabs-left">
                                        <ul class="nav nav-tabs" id="myTab3">
                                            <li class="active" id="href-cus" style="cursor:pointer !important">
                                                <a data-toggle="tab">
                                                    <i class="pink ace-icon fa fa-user bigger-110"></i>
                                                    Customers
                                                </a>
                                            </li>

                                        </ul>

                                        <div class="tab-content">
                                            <div class="tab-pane in active">
                                                <div class="row">
                                                    <div class="col-6">
                                                        <div class="panel-heading">
                                                            <ol class="breadcrumb">
                                                                <li id="href-cus-sub" style="cursor:pointer"><h4 style="color:cadetblue">Customer</h4></li>
                                                                <i class="ace-icon fa fa-angle-double-right"></i>
                                                                <li class="active">Detail</li>
                                                            </ol>
                                                        </div>
                                                        <hr style="margin: 0px !important" />
                                                    </div>
                                                </div>

                                                <br />
                                                <div class="row ">
                                                    <div class="col-lg-5">
                                                        <div class="panel panel-default">
                                                            <div class="panel-heading text-center">Customer' Information</div>
                                                            <div class="panel-body">
                                                                <div class="form-horizontal">

                                                                    <div class="form-group">
                                                                        <label class="control-label col-sm-4" for="fname">First Name :</label>
                                                                        <div class="col-sm-8">
                                                                            <input type="text" class="form-control" id="fname" value="@Html.DisplayFor(model => model.FirstName)" readonly>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label col-sm-4" for="lname">Last Name :</label>
                                                                        <div class="col-sm-8">
                                                                            <input type="text" class="form-control" id="lname" value="@Html.DisplayFor(model => model.LastName)" readonly>
                                                                        </div>
                                                                    </div>

                                                                    <div class="form-group">
                                                                        <label class="control-label col-sm-4" for="loginpass">Login Password:</label>
                                                                        <div class="col-sm-8">
                                                                            <input type="password" class="form-control" id="loginpass" value="*********" readonly>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label col-sm-4" for="tranpass">Transaction Password:</label>
                                                                        <div class="col-sm-8">
                                                                            <input type="password" class="form-control" id="tranpass" value="*********" readonly>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label col-sm-4" for="phone">Phone :</label>
                                                                        <div class="col-sm-8">
                                                                            <input type="text" class="form-control" id="phone" value="@Html.DisplayFor(model => model.PhoneNumber)" readonly>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label col-sm-4" for="email">Email :</label>
                                                                        <div class="col-sm-8">
                                                                            <input type="text" class="form-control" id="email" value="@Html.DisplayFor(model => model.Email)" readonly>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label col-sm-4" for="address">Address :</label>
                                                                        <div class="col-sm-8">
                                                                            <textarea cols="10" rows="5" class="form-control" id="address" readonly>@Html.DisplayFor(model => model.Address)</textarea>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label col-sm-4" for="pwd">Gender :</label>
                                                                        <div class="col-sm-8">
                                                                            @if (Model.Gender) {
                                                                                <label class="radio-inline"><input type="radio" name="optradio" checked>Male</label>
                                                                            }
                                                                            @if (!Model.Gender) {
                                                                                <label class="radio-inline"><input type="radio" name="optradio" checked>Female</label>
                                                                            }

                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label col-sm-4" for="address">Status :</label>
                                                                        <div class="col-sm-8">
                                                                            @if (Model.LockedStatus == true) {

                                                                                <button class="btn btn-primary" data-id="@Html.DisplayFor(model => model.CustomerId)" id="btn-actived"><i class="ace-icon fa fa-refresh bigger-140"> Actived</i></button>
                                                                            }
                                                                            @if (Model.LockedStatus == false) {

                                                                                <button class="btn btn-danger" data-id="@Html.DisplayFor(model => model.CustomerId)" id="btn-blocked"><i class="ace-icon fa fa-refresh bigger-140"> Blocked</i></button>
                                                                            }
                                                                        </div>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>


                                                    <div class="col-lg-7">
                                                        <div class="panel panel-default">
                                                            <div class="panel-heading text-center">List Account Bank</div>
                                                            <div class="panel-body">
                                                                <div class="row">
                                                                    <div class="col-3 pull-left">

                                                                        <button type="button" style="margin-left:15px" id="btn-funds" data-id="@Html.DisplayFor(model => model.CustomerId)" class="btn btn-success">Transfers</button>


                                                                        <!-- Modal -->
                                                                        <div class="modal fade" id="myModal" role="dialog">
                                                                            <div class="modal-dialog modal-sm">

                                                                                <!-- Modal content-->
                                                                                <div class="modal-content">
                                                                                    <div class="modal-header">
                                                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                                        <h4 class="modal-title text-center text-danger">Transfers</h4>
                                                                                    </div>
                                                                                    <div class="modal-body">
                                                                                        <div class="form-group row">
                                                                                            <label for="acc" class="col-sm-3 col-form-label">Account </label>
                                                                                            <div class="col-sm-9">
                                                                                                <select name="value" class="form-control" id="dropDownId">
                                                                                                    @foreach (var item in Model.BankAccounts) {
                                                                                                        <option value="@item.AccountNumber">@item.AccountNumber</option>
                                                                                                    }
                                                                                                </select>
                                                                                            </div>
                                                                                        </div>
                                                                                        <div class="form-group row">
                                                                                            <label for="money" class="col-sm-3 col-form-label">Money </label>
                                                                                            <div class="col-sm-9">
                                                                                                <b id="alert-money" class="text-danger"></b>
                                                                                                <input type="number" min="1" class="form-control" id="money" placeholder="Enter Value">
                                                                                            </div>
                                                                                        </div>

                                                                                    </div>
                                                                                    <div class="modal-footer">
                                                                                        <button type="button" class="btn btn-secondary" id="btn-tranfer">Save Changes</button>
                                                                                    </div>
                                                                                </div>

                                                                            </div>
                                                                        </div>

                                                                        <!--end model-->
                                                                    </div>
                                                                    <div class="col-3 pull-right">
                                                                        <button type="button" style="margin-right:15px" id="btn-create-acc" data-id="@Html.DisplayFor(model => model.CustomerId)" class="btn btn-info">Create New Account</button>


                                                                    </div>
                                                                </div>
                                                                <hr style="margin:5px !important" />
                                                                <table class="table table-striped table-bordered table-hover" style="cursor:pointer" id="table-accountBank">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Account Number</th>
                                                                            <th>Balance</th>
                                                                            <th>Create Date</th>

                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var item in Model.BankAccounts) {
                                                                            <tr data-bankID="@Html.DisplayFor(modelItem => item.AccountNumber)">
                                                                                <td>
                                                                                    @Html.DisplayFor(modelItem => item.AccountNumber)
                                                                                </td>

                                                                                <td>
                                                                                    @Html.DisplayFor(modelItem => item.Balance)
                                                                                </td>

                                                                                <td>
                                                                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                                                                </td>


                                                                            </tr>
                                                                        }


                                                                    </tbody>

                                                                </table>

                                                            </div>
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Customer -->
                                    @*<!-- Modal -->
                                        <div class="modal fade" id="myModal" role="dialog">
                                            <div class="modal-dialog">

                                                <!-- Modal content-->
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title" id="bankid"></h4>
                                                    </div>
                                                    <div class="modal-body">


                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                        <!--end model-->*@
                                </div><!-- /.col -->


                            </div><!-- /.row -->
                            <!-- PAGE CONTENT ENDS -->
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.page-content -->
            </div>
        </div><!-- /.main-content -->

        <div class="footer">
            <div class="footer-inner">
                <div class="footer-content">
                    <!-- Footer -->
                    <footer class="page-footer font-small blue pt-4">


                        <!-- Copyright -->
                        <div class="footer-copyright text-center py-3">
                            © 2019 Copyright:
                            <i style="font-weight:500"> OnlineBaking.com</i>
                        </div>
                        <!-- Copyright -->

                    </footer>
                </div>
            </div>
        </div>

        <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
            <i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
        </a>
    </div><!-- /.main-container -->
    <!-- basic scripts -->
    <!--[if !IE]> -->
    <script src="~/Content/Admin/assets/js/jquery-2.1.4.min.js"></script>

    <!-- <![endif]-->
    <!--[if IE]>
    <script src="assets/js/jquery-1.11.3.min.js"></script>
    <![endif]-->
    <script type="text/javascript">
        if ('ontouchstart' in document.documentElement) document.write("<script src='assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>
    <script src="~/Content/Admin/assets/js/bootstrap.min.js"></script>

    <!-- page specific plugin scripts -->
    <!--[if lte IE 8]>
      <script src="assets/js/excanvas.min.js"></script>
    <![endif]-->
    <script src="~/Content/Admin/assets/js/jquery-ui.custom.min.js"></script>
    <script src="~/Content/Admin/assets/js/jquery.ui.touch-punch.min.js"></script>
    <script src="~/Content/Admin/assets/js/bootbox.js"></script>
    <script src="~/Content/Admin/assets/js/jquery.easypiechart.min.js"></script>
    <script src="~/Content/Admin/assets/js/jquery.gritter.min.js"></script>
    <script src="~/Content/Admin/assets/js/spin.js"></script>

    <!-- ace scripts -->
    <script src="~/Content/Admin/assets/js/ace-elements.min.js"></script>
    <script src="~/Content/Admin/assets/js/ace.min.js"></script>
    <script src="~/Content/Admin/js/detail.js"></script>
    <script>
        $(document).ready(function () {
            $("#href-cus").click(function () {
                window.location.href = "/Admin/Admin";
            });
            $("#href-cus-sub").click(function () {
                window.location.href = "/Admin/Admin";
            })
        })

    </script>
</body>
</html>
