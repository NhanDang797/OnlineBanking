@model List<OnlineBanking.Models.StatementDTO>

@{
    ViewBag.Title = "AnnualStatement";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<h2>Annual Statement</h2>
<div class="row">
    <div class="col-6">
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <td>Year</td>
                    <td>
                        @ViewBag.DisplayYear
                    </td>
                </tr>
                <tr>
                    <td>Account number</td>
                    <td>@ViewBag.DisplayAccNumber</td>
                </tr>
                <tr>
                    <td>Account name</td>
                    <td>@ViewBag.DisplayAccName</td>
                </tr>
                <tr>
                    <td>Date</td>
                    <td>@ViewBag.DisplayDate</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-6">
        <table class="table table-borderless">
            <thead class="thead-light">
                <tr>
                    <th scope="col" colspan="2">Account Summary</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Opening Balance</td>
                    <td class="font-weight-bold">
                        @ViewBag.DisplayOpenBalance
                    </td>
                </tr>
                <tr>
                    <td>Payment in</td>
                    <td class="font-weight-bold">@ViewBag.DisplayPaymentIn</td>
                </tr>
                <tr>
                    <td>Payment out</td>
                    <td class="font-weight-bold">@ViewBag.DisplayPaymentOut</td>
                </tr>
                <tr>
                    <td>Closing Balance</td>
                    <td class="font-weight-bold">@ViewBag.DisplayClosingBalance</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Month</th>
            <th scope="col">Paid In</th>
            <th scope="col">Paid Out</th>
            <th scope="col">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date</td>
                <td>@item.PaidIn </td>
                <td>@item.PaidOut </td>
                <td>@item.Sum</td>
            </tr>
        }
    </tbody>
</table>
<div class="text-right">
    <button type="button" class="btn btn-primary" onclick="window.print();">Print statement</button>
</div>

