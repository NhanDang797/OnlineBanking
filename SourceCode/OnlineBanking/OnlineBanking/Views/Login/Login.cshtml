@{
    Layout = null;
}
@model OnlineBanking.Models.LoginModel

@*CSS*@
<link href="~/Content/Client/template/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="~/Content/Client/template/css/sb-admin.css" rel="stylesheet">

<style>
    .alert-failed ul li {
        list-style-type: none !important;
        text-align: center;
        padding-right: 30px;
        justify-content: center;
    }
</style>

@*BODY*@
<body class="bg-dark">
    <div class="container">
       
        <a href="/Home/Index"><img src="~/Content/Client/img/backhome.png" style="width:50px; position:fixed; left: 5px;top:10px" /></a>
        <div class="card card-login mx-auto mt-5">
            <div class="card-body">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger alert-failed", @style = "font-size:1.5em" })
                    <div class="form-group">
                        <div class="form-label-group">
                            @*Email*@
                            @Html.TextBoxFor(m => m.Email, new { @id = "inputEmail", @class = "form-control" })
                            @Html.LabelFor(m => m.Email, new { @for = "inputEmail" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @*Password*@
                            @Html.TextBoxFor(m => m.LoginPassword, new { @id = "inputPassword", @class = "form-control", @type = "password" })
                            @Html.LabelFor(m => m.LoginPassword, new { @for = "inputPassword" })
                            @Html.ValidationMessageFor(m => m.LoginPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @*Captcha*@
                            @Html.TextBoxFor(m => m.Captcha, new { @id = "inputCaptcha", @class = "form-control" })
                            @Html.LabelFor(m => m.Captcha, new { @for = "inputCaptcha" })
                            @Html.ValidationMessageFor(m => m.Captcha, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <img src="/Login/GetCaptchaImage" title="Captcha" width="100%" height="50px" />
                        </div>
                    </div>
                    <button type="submit" style="background-color:#1b9ca0; color:white" class="btn btn-block">Login</button>
                }
                <div class="text-center">
                    <a class="d-block small mt-3" href="/Login/Forgot" style="color:#1b9ca0">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>
</body>
@Html.Raw(TempData["block"])